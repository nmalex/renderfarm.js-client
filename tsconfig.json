{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es5",
        "lib": ["es2018", "dom"],
        "types": ["node", "jasmine", "reflect-metadata"],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "typings/browser.d.ts",
        "typings/browser/**"
    ]
}
